<odoo>
    <data>
        <template id="tonkho.table_theo_move_line">
            <table class="table table-bordered d4table" t-if="o.move_line_ids">
                <t t-set="has_serial_number" t-value="o.move_line_ids.filtered(lambda ml: ml.lot_id or ml.lot_name)" groups="stock.group_production_lot" />
                <t t-set="all_tot" t-value="o.move_line_ids.filtered(lambda ml: ml.tinh_trang =='tot')" />
                <thead>
                    <tr>
                        <th style="width:5%;text-align: center;">
                            <strong>STT</strong>
                        </th>
                        <th style="width:20%;text-align: center">
                            <strong>Tên Vật Tư</strong>
                        </th>
                        <th style="text-align: center;width:15%;">
                  Số lượng
               </th>
                        <th width="20%" t-if="has_serial_number">
                            Part number
                        </th>
                        <th width="20%" t-if="has_serial_number">
                            <t>Lot/Serial Number</t>
                        </th>
                        <th t-if="not all_tot">Tình trạng</th>
                        <th>Ghi chú</th>
                        <!-- <th>thông báo</th> -->
                    </tr>
                </thead>
                <tbody>
                    <t t-set="stt" t-value="0" />
                    <t t-foreach="o.move_lines.sorted(key=lambda m: m.product_id.id)" t-as="move">
                        <t t-set="stt" t-value="stt+1" />
                        <t t-set="rowspan" t-value="len(move.move_line_ids)" />
                        <t t-set="rowspan" t-value="rowspan if rowspan&gt;1 else False " />
                        <t t-set="one_part_number" t-value="len(set(move.move_line_ids.mapped('pn')))==1" t-if="not all_tot" />
                        <t t-set="one_tinh_trang" t-value="len(set(move.move_line_ids.mapped('tinh_trang')))==1" t-if="not all_tot" />
                        <t t-set="one_ghi_chu" t-value="len(set(move.move_line_ids.mapped('ghi_chu')))==1" />
                        <tr t-foreach="move.move_line_ids" t-as="ml">
                            <td t-att-rowspan="rowspan" t-if="ml_index==0" style="vertical-align: middle">
                                <span t-esc="stt" />
                            </td>
                            <td t-att-rowspan="rowspan" t-if="ml_index==0" style="vertical-align: middle">
                                <span t-field="move.product_id.display_name" />
                            </td>
                            <td t-att-rowspan="rowspan" t-if="ml_index==0" style="vertical-align: middle">
                                <span t-if="move.product_qty" t-esc="move.product_qty" />
                                <span t-if="not move.product_qty" t-esc="move.product_uom._compute_quantity(move.quantity_done, move.product_id.uom_id, rounding_method='HALF-UP')" />
                                <span t-field="move.product_id.uom_id" groups="product.group_uom" />
                            </td>
                            <td t-att-rowspan="ml_index==0 and one_part_number and rowspan" t-if="has_serial_number and (one_part_number and ml_index==0) or not one_part_number" style="vertical-align: middle">
                                <t t-if="ml.product_id.tracking != 'none'">
                                    <span t-field="ml.pn" />
                                </t>
                            </td>
                            <td t-if="has_serial_number">
                                <t t-if="ml.product_id.tracking != 'none'">
                                    <div class="col-xs-12">
                                        <span t-field="ml.lot_id" />
                                        <span t-if="not ml.lot_id" t-field="ml.lot_name" />
                                    </div>
                                </t>
                            </td>
                            <td t-att-rowspan="ml_index==0 and one_tinh_trang and rowspan" t-if="not all_tot and ((one_tinh_trang and ml_index==0) or not one_tinh_trang) " align="center" style="vertical-align: middle">
                                <span t-field="ml.tinh_trang"></span>
                            </td>
                            <td t-att-rowspan="ml_index==0 and one_ghi_chu  and rowspan" t-if="(one_ghi_chu and ml_index==0) or not one_ghi_chu " style="vertical-align: middle">
                                <span t-esc="ml.ghi_chu or move.ghi_chu"></span>
                            </td>
                            <!-- 
                            <td>
                            <div><span t-esc="one_tinh_trang"></span></div>
                            <div><span t-esc="move.move_line_ids.mapped('tinh_trang')"></span></div>
                            </td>
                             -->
                        </tr>
                    </t>
                </tbody>
            </table>
            <div t-if="all_tot" class="alltot">Tất cả vật tư đều tốt</div>
        </template>
    </data>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
   <data>
   
   <record id="paperformat_euro_lowmargin" model="report.paperformat">
        <field name="name">European A4 low margin</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">5</field>
        <field name="margin_left">10</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">80</field>
    </record>

      <report string="In Biên Bản Bàn Giao" id="action_bao_cao_dieu_chuyen" model="stock.picking" 
      report_type="qweb-pdf"
       name="tonkho.bao_cao_dieu_chuyen"
        file="abc.abc" 
        paperformat="tonkho.paperformat_euro_lowmargin"
        />
      <template id="tonkho.bao_cao_dieu_chuyen">
         <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
               <div class="article o_report_layout_standard">
                  <div class="page" style="font-family:Times New Roman; font-size:22px;">
                     <t t-call="tonkho.bien_ban_description" />
                     <t t-call="tonkho.full_table" />
                     <t t-call="tonkho.reason" />
                     <t t-call="tonkho.so_ban_in" />
                     <t t-call="tonkho.ky_ten" />
                  </div>
               </div>
            </t>
         </t>
      </template>
      
      
      
      
      
      <template id="tonkho.reason">
      	<t t-if="o.ly_do">
             <p>Lý do: <span t-esc="o.ly_do" />.
             </p>
          </t>
      </template>
      
      <template id="tonkho.so_ban_in">
      <div>
         Biên bản này được in thành
         <span t-field="o.so_ban_in" />
         bản.
         <!-- 
         Bên nhận giữ
         <span t-field="o.ben_nhan_giu" />
         bản, bên giao nhận
         <span t-field="o.ben_giao_giu" />
         bản.
          -->
         </div>
      </template>
      
      
      <template id="mot_ben_ky">
     <!--  <div class="col-xs-3"> -->
     
     <div t-att-class="'col-xs-%s'%len_alist">
      	 <p class="text-center">
                  <strong><t t-esc="title"></t></strong>
               </p>
                <br></br>
                <br></br>
                <br></br>
                <br></br>
               <p class="text-center"><t t-esc="name"></t></p>
               </div>
      </template>
      
      
      <template id="ky_ten">
         <div class="row" style="margin-top:50px;">
           <t t-set="alist" t-value="o.generate_partner_bootstrap_ti_le()"></t>
           <t t-set="len_alist" t-value="int(12/len(alist))"/>
           
           <t t-foreach="alist" t-as="atuple">
           		<t t-set="title" t-value="atuple[0]"/>
           		<t t-set="name" t-value="atuple[1]"/>
           		<t t-call="tonkho.mot_ben_ky">
           </t>
			</t>
         </div>
      </template>
      
      
      
      
      
      <template id="ky_ten_old1">
         <div class="row" style="margin-top:50px;">
           <t t-call="tonkho.mot_ben_ky">
           	 <t t-set="title" t-value="'ĐẠI DIỆN BÊN GIAO'"></t>
           	 <t t-set="name" t-value="o.source_member_ids[0].name if o.source_member_ids else ''"></t>
           </t>
           
            <t t-call="tonkho.mot_ben_ky">
           	 <t t-set="title" t-value="o.title_ben_thu_3.name"></t>
           	 <t t-set="name" t-value="o.ben_thu_3_ids[0].name if o.ben_thu_3_ids else ''"></t>
           </t>
           
           <t t-call="tonkho.mot_ben_ky">
           	 <t t-set="title" t-value="o.title_ben_thu_4.name"></t>
           	 <t t-set="name" t-value="o.ben_thu_4_ids[0].name if o.ben_thu_4_ids else ''"></t>
           </t>
           
           
           <t t-call="tonkho.mot_ben_ky">
           	 <t t-set="title" t-value="'ĐẠI DIỆN BÊN NHẬN'"></t>
           	 <t t-set="name" t-value="o.dest_member_ids[0].name if o.dest_member_ids else ''"></t>
           </t>
           
           
         </div>
      </template>
      
      
      
      <template id="ky_ten_old">
         <div class="row" style="margin-top:50px;">
            <div class="col-xs-3">
               <p class="text-center">
                  <strong>ĐẠI DIỆN BÊN GIAO</strong>
               </p>
               <p class="text-center">(Ký, họ tên)</p>
            </div>
            
            <div class="col-xs-3" />
            <div class="col-xs-3" />
            
            <div class="col-xs-3">
               <p class="text-center">
                  <strong>ĐẠI DIỆN BÊN NHẬN</strong>
               </p>
               <p class="text-center">(Ký, họ tên)</p>
            </div>
         </div>
      </template>
      
   </data>
</odoo>


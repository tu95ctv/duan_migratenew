<odoo>
<data>
<record id="view_stock_move_line_operation_tree_inherit" model="ir.ui.view">
            <field name="name">stock.move.line.operations.tree</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"></field>
            <field name="arch" type="xml">
            <field name="location_id" position="attributes">
            	<attribute name="context">{'product_id_d4':parent.product_id,'d4_location_id':parent.location_id}</attribute>
            </field>
            	<field name="product_uom_qty" position="attributes">
            		<attribute name="invisible">1</attribute>
            	</field>
            	<field name = "lot_id" position="before">
            		<field name="pn" invisible="not context.get('show_lots_m2o')"></field> <!--  invisible="not context.get('show_lots_m2o')" -->
            	</field>
              
              <!-- 
               <field name="lot_name" position="attributes">
               		<attribute name="invisible">1</attribute>
               </field>
                -->
               <field name="lot_id" position="attributes">
               		<!-- <attribute name="string">Serial Number</attribute> -->
               		<!-- <attribute name="invisible">0</attribute> -->
               		<attribute name="context">{'default_product_id': parent.product_id, 'active_picking_id': picking_id, 'd4_location_id':location_id}</attribute>
               </field>
            </field>
        </record>
        
        <record id="view_move_line_tree_inherit" model="ir.ui.view">
            <field name="name">stock.move.line.operations.tree</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_move_line_tree"></field>
            <field name="arch" type="xml">
            	<field name="product_id" position="after">
            		<field name="lot_id"></field>
            	</field>
            </field>
        </record>
        
        
        
        <record id="view_move_line_form_inherit" model="ir.ui.view">
            <field name="name">stock.move.line.form.inherit</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_move_line_form"></field>
            <field name="arch" type="xml">
            	<field name="reference" position="after">
            		<field name="picking_id"></field>
            		<field name="inventory_id"></field>
            	</field>
            </field>
        </record>
        
        
         <menuitem id="stock_move_line_menu"  action="stock.stock_move_line_action"
        parent="stock.menu_stock_inventory_control" sequence="1"/>
        
        </data>
   </odoo> 
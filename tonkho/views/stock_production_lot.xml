          </p>
        </field>-->
        <field name="context">{}</field><!-- {'search_default_group_by_product': 1} -->
    </record>
    
    
    
    
               <!--  <filter string='Group by Trạng Thái' name="group_by_tinh_trang" domain="[]" context="{'group_by': 'tinh_trang'}"/> -->
      
   </data>
</odoo>


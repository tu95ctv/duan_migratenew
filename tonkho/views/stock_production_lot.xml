<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<data>
	

      <record id="view_production_lot_tree_inherit" model="ir.ui.view">
         <field name="name">stock.production.lot.tree</field>
         <field name="model">stock.production.lot</field>
         <field name="inherit_id" ref="stock.view_production_lot_tree" />
         <field name="arch" type="xml">
         <field name="product_id" position="replace"></field>
         <field name="ref" position="replace"></field>
         	<field name="name" position="before">
  				<field name="product_id"></field>
            	<field name="pn"></field>
            </field>
            <field name="name" position="after">
            	<field name="ghi_chu"></field>
           	   <field name="ghi_chu_ban_dau"></field>
                   <field name="ghi_chu_ngay_nhap"></field>
                   <field name="ghi_chu_ngay_xuat"></field>
            </field>
         </field>
      </record>
      
      
      
      <record id="view_production_lot_form" model="ir.ui.view">
        <field name="name">stock.production.lot.form.inherit</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"></field>
        <field name="arch" type="xml">
           <field name="ref" position="attributes">
           			<attribute name="invisible">1</attribute>
           </field>
            <field name="ref" position="before">
            	<field name="pn"></field>
            </field>
            
        </field>
    </record>
    
   
       <record id="view_production_lot_form_simple" model="ir.ui.view">
        <field name="name">stock.production.lot.form.simple</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form_simple"></field>
        <field name="arch" type="xml">
            <field name="ref" position="after">
            	<field name="pn"></field>
            </field>
        </field>
    </record>
     
</data>
</odoo>